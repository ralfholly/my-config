[color]
    ui = auto
[diff]
    submodule = log
[status]
    submoduleSummary = true
[color "status"]
    untracked = red bold
    changed = red bold
    added = green bold
[color "diff"]
    old = red bold
    new = blue bold
    meta = yellow
    frag = magenta bold
[color "branch"]
    remote =  red bold
    current = green bold
[push]
    default = simple
[core]
	excludesfile = ~/.gitignore

[include]
    path = ~/.gitconfig.local
